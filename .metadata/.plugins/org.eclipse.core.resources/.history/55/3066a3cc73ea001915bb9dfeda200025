import java.awt.*;
public class BasicCalculator {

	public static void main(String xyz[]) {
		Frame F = new Frame("Rakim's Calculator";)
		TextField T1 = new TextField(10);
		TextField T2 = new TextField(10);
		TextField T3 = new TextField(10);
		Label L1 = new Label("First No.");
		Label L2 = new Label("Second No.");
		Label L3 = new Label("Result");
		Label error = new Label();
		
		Button B1 = new Button("+");
		Button B2 = new Button("-");
		Button B3 = new Button("x");
		Button B4 = new Button("/");
		
		FlowLayout Flow = new FlowLayout();
		
		F.setLayout(Flow);
		AddEventHandler Plus = new AddEventHandler(T1,T2,T3,error);
		AddEventHandler Sub = new SubEventHandler(T1,T2,T3,error);
		AddEventHandler Multiply = new MultEventHandler(T1,T2,T3,error);
		AddEventHandler Divide = new DivEventHandler(T1,T2,T3,error);
	}
	
}
